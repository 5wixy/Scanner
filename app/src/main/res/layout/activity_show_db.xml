<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:focusable="true"
    android:onClick="onClick"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ShowDB"
    >
<!-- TODO MAKE EDIT BUTTON WORK AND NOT MESS UP LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        >

        <!--text view for our course name-->
        <TextView
            android:id="@+id/idTVItemName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Item Name"
            android:textColor="@color/black"
            />

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:backgroundTint="@color/white"
            android:onClick="onClick"
            android:src="@drawable/ic_more">

        </ImageButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:onClick="onClick"
            >

            <!--text view for our course tracks-->
            <TextView
                android:id="@+id/idTVItemPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Item Price"
                android:onClick="onClick"
                android:textColor="@color/black" />


            <!--text view for our course duration-->
            <TextView
                android:id="@+id/idTVItemCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Code: "
                android:textColor="@color/black" />


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
